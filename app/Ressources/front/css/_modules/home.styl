/***************************************/

.sc-home
    position                            relative
    width                               100%
    min-height                          680px
    black-transparent-gradient()

.sch-background
    position                            relative
    top                                 0
    left                                0

.schb-img
    position                            absolute
    top                                 0
    left                                50%
    transform                           translateX( -50% )
    min-width                           1280px

.sch-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    margin-top                          -5%
    width                               60%

.sch-title-1
    display                             block
    margin-bottom                       45px
    font-size                           55px
    color                               $color2
    text-align                          center
    font-eb()

.sch-text
    display                             block
    font-size                           16px
    color                               $color2
    text-align                          center
    line-height                         22px
    font-l()

    .highlight
        font-b()

    .lnk
        position                        relative
        display                         inline-block
        font-size                       16px
        color                           $color2
        font-sb()
        transition2()

        &:after
            content                     ""
            display                     block
            position                    absolute
            width                       0
            height                      1px
            background-color            $color2
            left                        50%
            transform                   translateX( -50% )
            transition2()

        &:hover
            color                       $color5

            &:after
                background-color        $color5
                width                   100%
