/***************************************/

.sc-home
    position                            relative
    width                               100%
    height                              100vh
    overflow                            hidden
    black-transparent-gradient()

.sch-background
    position                            relative
    top                                 0
    left                                0
    width                               100%
    height                              100%

    &:after
        content                         ""
        display                         block
        position                        absolute
        bottom                          0
        left                            0
        width                           0
        height                          0
        border-bottom                   200px solid $color2
        border-left                     100vw solid transparent

.schb-img
    position                            absolute
    top                                 0
    left                                50%
    transform                           translateX( -50% )
    min-width                           1280px
    width                               100%

.sch-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    margin-top                          -5%
    width                               60%
    max-width                           720px

.sch-title-1
    display                             block
    margin-bottom                       45px
    font-size                           55px
    color                               $color2
    text-align                          center
    font-eb()

.sch-text
    display                             block
    font-size                           16px
    color                               $color2
    text-align                          center
    line-height                         22px
    font-l()

    .highlight
        font-b()

    .lnk
        position                        relative
        display                         inline-block
        font-size                       16px
        color                           $color2
        font-sb()
        transition2()

        &:after
            content                     ""
            display                     block
            position                    absolute
            width                       0
            height                      1px
            background-color            $color2
            left                        50%
            transform                   translateX( -50% )
            transition2()

        &:hover
            color                       $color5

            &:after
                background-color        $color5
                width                   100%

.sch-social-networks
    display                             block
    margin-top                          45px

.sch-list
    display                             block
    text-align                          center

.sch-itm
    display                             inline-block

.sch-lnk
    display                             block
    margin                              0 5px
    color                               $color2
    font-size                           2.5rem
    transition2()

    &:hover
        color                           $color5

.sch-lnk-twitter
    display                             block
