.site-header
    position                            absolute
    top                                 0
    left                                0
    z-index                             4
    width                               100%
    height                              50px

/* Mediaqueries Mobile (1023px) */
@media all and ( max-width: $largeScreenContentMinWidth )

    .site-header
        position                        fixed
        left                            -70%
        width                           70%
        height                          100%
        background-color                $color3
        transition2()
