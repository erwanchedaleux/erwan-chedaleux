/***************************************/

.site-navigation-mobile
    display                             none

.site-navigation
    width                               100%

.sn-list
    display                             table
    width                               70%
    margin                              0 auto

.sn-itm
    display                             table-cell
    width                               1%
    text-align                          center

    &.active
        .sn-lnk
            color                       $color2

.sn-lnk
    text-transform                      uppercase
    color                               $color7
    transition2()

    &:hover
        color                           $color2


/* Mediaqueries Mobile (639px) */
@media all and ( max-width: $smallScreenContentMinWidth )

    .sn-list
        display                             block
        width                               100%

    .sn-itm
        display                             block
        width                               100%
        text-align                          left

    .sn-lnk
        display                             block
        padding                             10px
        font-size                           1.8rem
        color                               $color2

        &.active
            font-b()

        &:hover
            font-b()

    .site-navigation-mobile
        display                             block
        width                               35px
        height                              25px
        position                            absolute
        top                                 0
        left                                110%
        margin                              20px 0
        transform                           rotate( 0deg )
        transition                          0.5s ease-in-out
        cursor                              pointer

        span
            display                         block
            position                        absolute
            height                          2px
            width                           100%
            background                      $color2
            border-radius                   2px
            opacity                         1
            left                            0
            transform                       rotate( 0deg )
            transition                      0.25s ease-in-out

        span:nth-child(1)
            top                             0px


        span:nth-child(2)
            top                             8px


        span:nth-child(3)
            top                             16px


    .navigation-mobile-opened
        .site-header
            left                            0

        .site-navigation-mobile
            span:nth-child(1)
                top                         8px
                transform                   rotate( 135deg )


            span:nth-child(2)
                opacity                     0
                left                        -60px

            span:nth-child(3)
                top                         8px
                transform                   rotate( -135deg )
